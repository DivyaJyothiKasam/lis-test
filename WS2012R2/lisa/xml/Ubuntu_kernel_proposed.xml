<config>
    <global>
        <logfileRootDir>ubuntu-proposed-kernel-logs</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <LisaInitScript>
            <file>.\setupScripts\CreateVMs.ps1</file>
        </LisaInitScript>
        <email>
            <recipients>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>Ubuntu proposed kernel install Test Results</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
        <imageStoreDir>\\UNCpath\test</imageStoreDir>
       <!-- Optional testParams go here -->
    </global>

    <testSuites>
        <suite>
            <suiteName>ubuntu</suiteName>
            <suiteTests>
                <suiteTest>ubuntu_proposed_kernel</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
         <test>
            <testName>ubuntu_proposed_kernel</testName>
            <testScript>ubuntu_proposed_kernel.sh</testScript>
            <files>remote-scripts\ica\ubuntu_test_kernel.sh</files>
            <timeout>900</timeout>
            <OnError>Continue</OnError>
         </test>
    </testCases>

    <VMs>
        <vm>
            <hvServer>hostname</hvServer>
            <vmName>Ubuntu_proposed_kernel</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>pki_id_rsa.ppk</sshKey>
            <suite>ubuntu</suite>
            <hardware>
               <create>true</create>
               <numCPUs>2</numCPUs>
               <memSize>2048</memSize>
               <disableDiff>True</disableDiff>
               <nic>VMBus,Vm.Enterprise#1</nic>
            </hardware>
        </vm>
    </VMs>
</config>